{
  "name": "image-url-checker",
  "version": "0.5.2",
  "description": "Node images URL checker",
  "main": "index.js",
  "bin": {
    "image-url-checker": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp ./lib/version.txt ./build",
    "package": "rm -rf dist && npm run build && cp -R build dist && pkg . --output dist/image-url-checker",
    "publish:major": "npm run package && git add dist && git commit -m 'Package a new binary' && npm version major && npm publish && git push && git push --tags",
    "publish:minor": "npm run package && git add dist && git commit -m 'Package a new binary' && npm version minor && npm publish && git push && git push --tags",
    "publish:patch": "npm run package && git add dist && git commit -m 'Package a new binary' && npm version patch && npm publish && git push && git push --tags",
    "start": "node build/index",
    "test": "jest",
    "test:ci": "NODE_ENV=test jest --coverage false"
  },
  "pkg": {
    "scripts": "dist/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbuget/image-url-checker.git"
  },
  "author": "Jérémy Buget <contact@jbuget.fr>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/jbuget/image-url-checker/issues"
  },
  "homepage": "https://github.com/jbuget/image-url-checker#readme",
  "engines": {
    "node": "14.17.6",
    "npm": "6.14.15"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "chalk": "^4.1.2",
    "commander": "^8.2.0",
    "p-map": "^4.0.0",
    "tslog": "^3.2.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.2.2",
    "pkg": "^5.3.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
